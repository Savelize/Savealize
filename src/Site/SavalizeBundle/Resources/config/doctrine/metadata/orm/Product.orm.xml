<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Product" table="product">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="30" nullable="false"/>
    <field name="confirmed" type="blob" column="confirmed" nullable="false"/>
    <field name="isDeleted" type="blob" column="is_deleted" nullable="false"/>
    <many-to-one field="category" target-entity="Category">
      <join-columns>
        <join-column name="category_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="brand" target-entity="Brand" inversed-by="product">
      <join-table name="product_brand">
        <join-columns>
          <join-column name="product_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="brand_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
